<% provide(:title, 'All requests') %>
<h1>All requests</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table id="datatable1" class="table table-striped table-hover">
        <thead>
          <tr>
            <th class="sort-alpha">title</th>
            <th>Content</th>
						<td>Status</th>
            <th>User requested</th>
            <th>Time of submission</th>
            <td>Action</td>
          </tr>
        </thead>
        <tbody>
          <% @requests.each do |item| %>
            <tr class="gradeX">
              <td><%= item.title %></td>
              <td><%= item.contenthtml.html_safe %></td>
              <td>
                <% case item.status %>
								<% when 0 %>
									Pending
								<% when 1 %>
								  Reject
                <% else %>
                  Accept
                <% end %>
              </td>
              <td><%= item.user_id %></td>
							<td><%= item.created_at %></td>
              <td>
                <button><i class="fa fa-eye" aria-hidden="true"></i></button>
                <button><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                <button><i class="fa fa-times" aria-hidden="true"></i></button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!--end .table-responsive -->
  </div><!--end .col -->
</div><!--end .row -->
<!-- END DATATABLE 1 -->
